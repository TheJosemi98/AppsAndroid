<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_dietas">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission-group.STORAGE"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.InicioSesion.InicioSesion"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.InicioSesion.CargaPantalla"
            android:screenOrientation="nosensor"
            android:label="PantallaCarga"/>
        <activity android:name=".ui.ventana_principal.ventana_principal"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ui.info_Nutricional_Comida.InfoNutricionalComida"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ui.ListaEquivalentes.ListaEquivalentes"
            android:screenOrientation="nosensor"/>
        <activity android:name=".ui.info_nutricional_alimento.InfoNutricionalAlimento"
            android:screenOrientation="nosensor"/>
    </application>

</manifest>